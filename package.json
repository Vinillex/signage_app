{
  "name": "universal-digital-signage",
  "version": "1.0.0",
  "description": "Cross-platform digital signage solution for multiple operating systems",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server/index.js",
    "dev:client": "vite src/client",
    "build": "npm run build:web && npm run build:desktop",
    "build:web": "vite build src/client",
    "build:desktop": "electron-builder",
    "build:mobile": "vite build src/client --outDir dist/mobile",
    "build:tizen": "npm run build:web && tizen build-web",
    "build:webos": "npm run build:web && webos-build",
    "start": "node src/server/index.js",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/"
  },
  "keywords": [
    "digital-signage",
    "cross-platform",
    "electron",
    "pwa",
    "tizen",
    "webos",
    "media-player"
  ],
  "author": "Digital Signage Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1450.0",
    "sharp": "^0.32.5",
    "ffmpeg-static": "^5.2.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "qrcode": "^1.5.3",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "joi": "^17.9.2"
  },
  "devDependencies": {
    "electron": "^25.3.1",
    "electron-builder": "^24.6.4",
    "vite": "^4.4.9",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "eslint": "^8.47.0",
    "prettier": "^3.0.1",
    "@types/node": "^20.5.0",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.28",
    "tailwindcss": "^3.3.3"
  },
  "build": {
    "appId": "com.digitalsignage.universal",
    "productName": "Universal Digital Signage",
    "directories": {
      "output": "dist/desktop"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}